{{#if isValid}}
<div>
    {{#each docs}}
    <div>
        <p>Title: {{this.title}} &nbsp; Category: {{this.category}}</p>
        <p>Price: {{this.price}} &nbsp; Stock: {{this.stock}}</p>
    </div>
    <br/>
    {{/each}}
</div>
<br/>
<div>
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>
<div>
    <p1>Total de paginas: {{this.totalPages}}</p1>
</div>
{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}