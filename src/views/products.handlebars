{{#if isValid}}
<div class="d-flex justify-content-evenly flex-row mb-3">
    {{#each docs}}
    <div class="card text-center"  style="width: 20%">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">{{this.category}}</h6>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">${{this.price}}</p>
            <p class="card-text">Stock: {{this.stock}}</p>
            <button type="submit" class="btn btn-success">Agregar al carrito</button>
        </div>
    </div>
    {{/each}}
</div>
<br />
<div class="d-flex justify-content-center flex-row mb-3">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {{#if hasPrevPage}}
            <li class="page-item">
                <a class="page-link" href={{this.prevLink}} aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{/if}}
            <li class="page-item"><a class="page-link">{{this.page}}</a></li>
            {{#if hasNextPage}}
            <li class="page-item">
                <a class="page-link" href={{this.nextLink}} aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>
<div class="d-flex justify-content-center">
    <p1>Total de paginas: {{this.totalPages}}</p1>
</div>


{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}